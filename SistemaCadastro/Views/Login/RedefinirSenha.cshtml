@model RedefinirSenhaModel
@{
    Layout = "_LayoutDeslogado";
    ViewData["Title"] = "Redefinir Senha";
}

@if (TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger" role="alert">
        <button type="button" class="btn btn-danger btn-sm close-alert" arial-labe="Close">x</button>
        @TempData["MensagemErro"]
    </div>
}

<br />

<form asp-controller="Login" asp-action="EnviarLinkRedefinirSenha" method="post">
    <div class="mb-3">
        <label for="Login" class="form-label">Login</label>
        <input type="text" asp-for="Login" class="form-control" id="login">
        @Html.ValidationMessageFor(x => x.Login)
    </div>
    <div class="mb-3">
        <label for="Email" class="form-label">E-mail</label>
        <input type="text" asp-for="Email" class="form-control" placeholder="Digit o E-mail do usúario">
        @Html.ValidationMessageFor(x => x.Email)
    </div>


    <button type="submit" class="btn btn-primary">Redefinir Senha</button>
    <a class="btn btn-secondary" asp-controller="Login" asp-action="Index" role="button">Voltar</a>
</form>